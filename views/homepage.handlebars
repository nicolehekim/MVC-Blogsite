<div class="container mt-5">
  <h1 class="mb-3">Welcome to Your Posts!</h1>
  <div class="row">
    {{#each posts}}
      <div class="col-md-4">
        <div class="card mb-3">
          <div class="card-header bg-dark">
            <h5 class="card-title">
              <a href="/post/{{id}}" class="d-flex justify-content-center text-white">{{title}}</a>
            </h5>
          </div>
          <div class="d-flex justify-content-center card-body bg-body text-dark">
            <p>By: {{user.email}}</p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>


